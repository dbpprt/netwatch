@using TrafficStats.Model.Entities
@model TrafficStats.Web.ViewModels.Groupings.IndexViewModel

<h2 class="page-header">Groupings</h2>
<table class="table table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th style="text-align: right">
                @*<a class="btn btn-xs btn-success" href="#addGrouping" data-toggle="modal" role="button">Add grouping</a>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var target in Model.Groupings)
        {
            <tr>
                <td>
                    @target.Name
                </td>
                <td>
                    @target.Description
                </td>
                <td></td>
            </tr>
        }

    </tbody>
</table>

